<div class="container">
  <p id="notice"></p>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice]%>
      </div>
    <% end %>
  <div class="row">
    <div class="col-4">
      <h1>User info</h1>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %>
        <table class="table">
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
        </table>
            <div class="row">
                <%= link_to "", edit_user_path(@user), class: "fa fa-wrench btn btn-light col-12" %>
            </div>
            <%= render 'books/list', book: @book %>
    </div>
    <div class="col-8">
        <h1>Book detail</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>title</th>
              <th>opinion</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
               <tr>
                <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
                <td><%= link_to @book.user.name, user_path(@book.user) %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user%>
                  <td><button type="button" class="btn btn-success"><%= link_to "Edit", edit_book_path(@book)%>
                    </button></td>
                  </td>
                  <td><button type="button" class="btn btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete %></button></td>
                <% end %>
              </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>