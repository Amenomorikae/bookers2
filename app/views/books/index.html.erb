<div class="container">
  <p id="notice"></p>
    <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <ul>
              <%= @book.errors.count%>errors
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
    <% end %>
  <div class="row">
    <div class="col-4">
        <h1>User info</h1>
         <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %>
        <table class="table">
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
        </table>
            <div class="row">
                <%= link_to "", edit_user_path(@user), class: "fa fa-wrench btn btn-light col-12" %>
            </div>
            <%= render 'books/list', book: @book %>
    </div>
      <div class="col-8">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
              <% @books.each do |book| %>
               <tr>
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
               </tr>
              <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>