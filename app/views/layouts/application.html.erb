<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="#">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <ul class="navbar-nav">
                <li class="nav-item">
                  <%= link_to "Home", user_path(current_user.id), class: "nav-link fa fa-home" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Users', users_path, class: "nav-link fa fa-user" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Books', books_path, class: "nav-link fa fa-book" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'logout', destroy_user_session_path, method: :delete, class: "nav-link fa fa-sign-out" %>
                </li>
              </ul>
            <% else %>
              <ul class="navbar-nav">
                <li class="nav-item">
                  <%= link_to "Home", root_path, class: "nav-link fa fa-home" %>
                </li>
                <li class="nav-item">
                  <%= link_to "About", home_about_path, class: "nav-link fa fa-link" %>
                </li>
                <li class="nav-item ">
                  <%= link_to "sing up", new_user_registration_path, class: "nav-link fa fa-edit" %>
                </li>
                <li class="nav-item">
                  <%= link_to "login", new_user_session_path, class: "nav-link fa fa-sign-in" %>
                </li>
              </ul>
            <% end %>

          </div>
        </div>

      </div>
      </nav>

  </header>
  <div class="container">
          <% flash.each do |key, value| %>
         <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
  </div>
    <%= yield %>
  </body>

</html>
