<div class="info">
  <h1>User info</h1>
   <div>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"%>
  </div><br>
    <table class="table">
      <tr>
        <th>Name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>Introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    </table>
    <div class="edit">
      <% if current_user == user %>
        <%= link_to " Edit", edit_user_path(user), class: "fa fa-wrench btn" %>
      <% end %>
    </div>
</div>