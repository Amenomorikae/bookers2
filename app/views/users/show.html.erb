<div class="container">
  <p id="notice"></p>
  <div class="row">
      <div class="col-lg-4 col-xs-12">
           <%= render 'users/info', user: @user %>
          <% if @user == current_user %>
           <%= render 'books/list', book: @book %>
          <% end %>
      </div>
        <div class="col-lg-8 col-xs-12">
          <h1>Books</h1>
                <table class="table table-striped">
                <thead>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>

                    <% @books.each do |book| %>
                     <tr>
                      <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg' %></td>
                      <td><%= link_to book.title,book_path(book) %></td>
                      <td><%= book.body %></td>
                      <td>コメント数：<%= book.book_comments.count %></td>
                     </tr>
                    <% end %>
                </tbody>
              </table>
      </div>
   </div>
</div>